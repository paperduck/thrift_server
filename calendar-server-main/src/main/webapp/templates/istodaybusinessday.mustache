    <form action="istodaybusinessdayresult" method="get">
        <fieldset>
            <legend><b>Check if today is a business day</b></legend>
                Returns true if today is not marked as a holiday in the database <b>AND</b> is not the weekend.<br/><br/>
                Calendar ID: (example: 0)<br/>
                <input type="text" name="calendar"/><br/><br/>
                <input type="submit" value="Check"/>
        </fieldset>
    </form><br/>

    <table border=1>
        <tr><td colspan=3>Days:</td></tr>
        <tr><td>calendar</td><td>date</td><td>isHoliday</td></tr>
        {{#days}}
        <tr><td>{{calendar}}</td><td>{{date}}</td><td>{{isHoliday}}</td></tr>
        {{/days}}
    </table>

</body>
